<?xml version="1.0" encoding="UTF-8"?>
<mvc:View
	controllerName="webapp.controller.Home"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<Page
		id="page"
		title="Список сотрудников">
		<content>
			<Panel>
				<Table
					id="peopleList"
					growing="false"
					growingThreshold="5"					
					items="{/UsersPagin}">
					<headerToolbar>
						<Toolbar>
							<Button 
								press=".onNext"
								id="decBtn" 
								enabled="false" 
								icon="sap-icon://close-command-field" />
							<Title text="Сотрудники" level="H2"/>
							<ToolbarSpacer />
							<Button id="incBtn"  icon="sap-icon://open-command-field" press=".onNext" />
						</Toolbar>
					</headerToolbar>
					<columns>
						<Column id="eplID" demandPopin="true"><Text text="Табельный номер"/></Column>
						<Column id="eplFIO" demandPopin="true"><Text text="ФИО"/></Column>
					</columns>
					<items>
						<ColumnListItem 
							type="Navigation"
							press=".onItemPressed">
							<cells>
								<Text text="{Pernr}"/>
								<Text text="{Value}"/>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</Panel>
		</content>
	</Page>
</mvc:View>